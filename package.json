{
  "name": "docker_build_service",
  "version": "1.0.0",
  "description": "This is a web service designed to conform to the Github api to build docker images and push them to a docker repository",
  "main": "index.js",
  "engines": {
    "node": ">=0.12"
  },
  "private": true,
  "scripts": {
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --require should --reporter spec --harmony --bail api/test.js api/*/test.js",
    "start": "./node_modules/.bin/nodemon --harmony bin/api"
  },
  "repository": "lancehudson/docker_build_service",
  "keywords": [
    "docker",
    "build service"
  ],
  "author": "Lance Hudson <lance@lancehudson.com> (http://lancehudson.com)",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/lancehudson/docker_build_service/issues"
  },
  "homepage": "https://github.com/lancehudson/docker_build_service#readme",
  "dependencies": {
    "co-body": "^2.0.0",
    "commander": "^2.8.1",
    "debug": "^2.2.0",
    "koa": "^0.21.0",
    "koa-bodyparser": "^2.0.0",
    "koa-compress": "^1.0.8",
    "koa-jsonapi-headers": "^1.1.2",
    "koa-logger": "^1.3.0",
    "koa-ratelimit": "^2.1.0",
    "koa-resource-router": "^0.4.0",
    "koa-response-time": "^1.0.2",
    "koa-router": "^5.1.2",
    "nodemon": "^1.3.7",
    "redis": "^0.12.1"
  },
  "jscsConfig": {
    "preset": "node-style-guide"
  },
  "jshintConfig": {
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "freeze": true,
    "indent": 2,
    "newcap": true,
    "quotmark": "single",
    "maxdepth": 3,
    "maxstatements": 15,
    "maxlen": 80,
    "eqnull": true,
    "funcscope": true,
    "node": true,
    "esnext": true,
    "noyield": true,
    "globals": {
      "describe": true,
      "it": true
    }
  },
  "devDependencies": {
    "mocha": "^2.2.5",
    "should": "^7.0.2",
    "supertest": "^1.0.1"
  }
}
