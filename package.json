{
  "name": "docker_build_service",
  "version": "1.0.0",
  "description": "This is a web service designed to conform to the Github api to build docker images and push them to a docker repository",
  "main": "index.js",
  "engines": {
    "node": ">=0.12"
  },
  "private": true,
  "scripts": {
    "test": "./node_modules/.bin/gulp --harmony",
    "start": "./node_modules/.bin/nodemon --harmony bin/api"
  },
  "repository": "lancehudson/docker_build_service",
  "keywords": [
    "docker",
    "build service"
  ],
  "author": "Lance Hudson <lance@lancehudson.com> (http://lancehudson.com)",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/lancehudson/docker_build_service/issues"
  },
  "homepage": "https://github.com/lancehudson/docker_build_service#readme",
  "dependencies": {
    "co-body": "^4.0.0",
    "commander": "^2.8.1",
    "debug": "^2.2.0",
    "docker-cmd": "^0.2.2",
    "dockerode": "^2.2.6",
    "jade": "^1.11.0",
    "koa": "^1.1.2",
    "koa-better-ratelimit": "^2.1.2",
    "koa-body": "^1.2.1",
    "koa-compress": "^1.0.8",
    "koa-conditional-get": "^1.0.3",
    "koa-errorhandler": "^0.1.1",
    "koa-etag": "^2.0.0",
    "koa-helmet": "^0.4.0",
    "koa-json-mask": "^0.3.2",
    "koa-jsonapi-headers": "^1.1.2",
    "koa-logger": "^1.3.0",
    "koa-mount": "^1.3.0",
    "koa-resource-router": "^0.4.0",
    "koa-response-time": "^1.0.2",
    "koa-router": "^5.1.2",
    "nodegit": "^0.5.0",
    "nodemon": "^1.3.7",
    "q": "^1.4.1",
    "rimraf": "^2.4.2",
    "scmp": "^1.0.0",
    "tar-fs": "^1.8.1",
    "tmp": "0.0.28"
  },
  "jscsConfig": {
    "preset": "node-style-guide",
    "esnext": true
  },
  "jshintConfig": {
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "freeze": true,
    "indent": 2,
    "newcap": true,
    "quotmark": "single",
    "maxdepth": 3,
    "maxstatements": 15,
    "maxlen": 80,
    "eqnull": true,
    "funcscope": true,
    "node": true,
    "esnext": true,
    "noyield": true,
    "mocha": true
  },
  "devDependencies": {
    "gulp": "^3.9.0",
    "gulp-jscs": "^1.6.0",
    "gulp-jscs-stylish": "^1.1.0",
    "gulp-jshint": "^1.11.2",
    "gulp-mocha": "^2.1.3",
    "gulp-util": "^3.0.6",
    "jshint-stylish": "^2.0.1",
    "mocha": "^2.2.5",
    "should": "^7.0.2",
    "supertest": "^1.0.1"
  }
}
